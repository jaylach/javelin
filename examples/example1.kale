user => {
  id: {{userId}},
  userName: {{userName}},
  firstName: {{firstName}},
  homePhone: {{ phones | filter: { type: 'home' }, 
                         first, 
                         pluck: { prop: 'number' } }},
  mobilePhone: {{ phones | filter: { type: 'mobile' }, 
                           first, 
                           pluck: { prop: 'number' } }},
  address: {{ _ | @address }}
}

address => {
  street: {{street1}},
  city: {{city}},
  state: {{state}},
  zip: {{zipCode}}
}

